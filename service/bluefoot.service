[Unit]
Description=A flask web server running bluefoot code
Documentation=https://github.com/PICOVERAVR/bluefoot/wiki

# need the network to start the web server
Requires=network-online.target
After=network-online.target

[Service]
Type=forking
# activate venv (assuming this is installed!)
ExecStartPre=source /home/pi/release/blfpi_venv/activate
# start the flask server
ExecStart=FLASK_APP=/home/pi/release/bluefoot/src/UI_Integrations/UI.py flask run

